<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление сущностями"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Карточка выбора сущности -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите сущность для управления"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerEntityType"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Карточка списка -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressLoading"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEntities"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvEmptyList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нет данных для отображения"
                android:textSize="16sp"
                android:textColor="@color/gray_400"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Кнопка добавления -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddEntity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Добавить"
        android:layout_marginTop="12dp"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_input_add"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white" />

</LinearLayout>